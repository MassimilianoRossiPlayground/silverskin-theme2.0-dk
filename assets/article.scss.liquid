#shopify-section-article-template{

    margin-top:40px;
}

.pre-header{

    position: relative;
    text-align: center;
    margin-top:80px;


    .breadcrumb-container{
        position: absolute;
        left: 20px;
        top:0px;


        .breadcrumb{
            margin: 0;
        }

    }
    .tag-container{
        font-weight: bold;
        @media screen and (max-width: 768px) {
            padding-top: 40px;
        }
    }
   
}

.blog-header{
    text-align: center;
    width: 60%;
    margin: 0 auto;

    h1.blog__title {
        font-family: barlow-bold-italic !important;
        font-size: 42px;
        font-weight: bold;
        margin: 20px;

        @media screen and (max-width: 768px) {

            font-size: 32px;
        }
    }
    
    .blog-subtitle{
        font-size: 16px;
        margin: 30px 0;
    }

    .article__date{
        margin-top: 20px;
        margin-bottom:20px;
    }
   
}

.image_blog_alt{
    text-align: center;
    width: 60%;
    margin: 0 auto;
    margin-top: 20px;
}


.blog-content{
    text-align: justify;


    h2{
        text-align: center;
        font-size: 32px;
        @media screen and (max-width: 768px) {            
            font-size: 30px;            
        }
    }
   
}

.more-articles {
    margin-bottom: 40px;

    h2 {
        text-align: center;
        margin-bottom:40px;
        text-transform: capitalize!important;
    }
    .single-article__tags{
        font-size: 16px;
        margin-top: 10px;
    }
    .article-title{
        font-size: 16px;
        margin-top:5px;
        letter-spacing: 1px;
    }
}