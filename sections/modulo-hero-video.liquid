<link rel="stylesheet" href="{{ 'modulo-hero-video.css' | asset_url }}" type="text/css">
<script src="{{ 'modulo-hero-video.js' | asset_url }}" defer="defer"></script>

<div class="hero-video">
    <video class="hero-video__desk" width="100%" height="" autoplay="" muted="" loop="" playsinline="">
        <source src='{{ section.settings.video_desk }}' type='video/mp4' >
    </video>
    <video class="hero-video__mob" width="100%" height="" autoplay="" muted="" loop="" playsinline="">
        <source src='{{ section.settings.video_mob }}' type='video/mp4' >
    </video>

    <div class="volumeWrapper">
        <img class="volumeControl volUp" src="https://cdn.shopify.com/s/files/1/0285/3706/1424/files/volume-on.png?v=1664356780">
        <img class="volumeControl volDn active" src="https://cdn.shopify.com/s/files/1/0285/3706/1424/files/volume-off.png?v=1664356780">
    </div>
</div>

{% schema %}
  {
    "name": "Hero Video",
    "settings": [
        {
            "type": "text",
            "id": "video_desk",
            "label": "Video Desk"
        },
        {
            "type": "text",
            "id": "video_mob",
            "label": "Video Mob"
        }
    ],
    "presets": [
        {
            "name": "Hero Video"
        }
    ]
  }
{% endschema %}
