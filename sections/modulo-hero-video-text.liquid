<link rel="stylesheet" href="{{ 'modulo-hero-video-text.css' | asset_url }}" type="text/css">

{%- assign img_url = section.settings.icon | img_url: 'master' -%}
{%- assign background_image = section.settings.background_image | img_url: 'master' -%}

<div class="hero-video-text" style="background-image:url({{ section.settings.background_image }});">
  <div class="overlay-dark"></div>  
    <video width="100%" height="600" autoplay muted loop playsinline>
      <source src="{{ section.settings.video }}" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  <div class="hero-video-text__content">
    <img src="{{ img_url }}" alt="ag silverskin">
    <h2>{{ section.settings.title }}</h2>
    {{ section.settings.description }}
  </div>

</div>
{% schema %}
  {
    "name": "Hero Video Text",
    "settings": [
        {
            "type": "text",
            "id": "video",
            "label": "Video"
        },
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        },
        {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        }
    ],
    "presets": [
        {
            "name": "Hero Video Text"
        }
    ]
  }
{% endschema %}
